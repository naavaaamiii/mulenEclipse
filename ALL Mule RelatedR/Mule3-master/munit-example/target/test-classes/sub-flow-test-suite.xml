http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">
    <munit:config name="munit" doc:name="MUnit configuration"/>
    <spring:beans>
        <spring:import resource="classpath:munit-example1.xml"/>
    </spring:beans>
    
    <munit:test name="sub-flow-decision1-test-suite-decision1SubFlowTest" description="Test">
        <flow-ref name="decision1SubFlow" doc:name="Flow-ref to decision1SubFlow"/>
        <munit:assert-on-equals expectedValue="#['decision1']" actualValue="#[flowVars.decisionVariable]" doc:name="Assert Equals" message="Not the Expected Value i.e. &quot;decision1&quot; , instead we got #[flowVars.decisionVariable]"/>
    </munit:test>
